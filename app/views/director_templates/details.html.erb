
<h1>Director #<%= @the_director.id %> details</h1>

<a href ="/directors">Go back</a>

<hr>


<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_director.name %>
  </dd>
  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_director.dob %>
  </dd>
  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_director.bio %>
  </dd>
  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_director.image %>" alt="director_image" width=200/>
  </dd>
  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_director.created_at %> 
  </dd>
  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_director.updated_at %>
  </dd>

</dl>

<%= matching_movies = Movie.where({:director_id => @the_director.id}) %>


<table>
  <tr>
    <td>ID</td>
    <td>Image</td>
    <td>Title</td>
    <td>Year</td>
    <td>Director</td>

  
  </tr>
</table>
<% matching_movies.each do |a_movie| %>
<li>
  <%= a_movie %>
</li>
<% end %>
